{
  "name": "deep-web-solutions/wp-utility-plugin",
  "type": "wordpress-plugin",

  "description": "A skeleton plugin using the DWS framework that can be used to add site-specific code.",
  "keywords": ["wordpress", "plugin", "Deep Web Solutions", "utility"],
  "homepage": "https://www.deep-web-solutions.de",
  "license": "GPL-3.0-or-later",
  "authors": [
    {
      "name": "Antonius Hegyes",
      "email": "a.hegyes@deep-web-solutions.de",
      "homepage": "https://www.linkedin.com/in/tonyhegyes",
      "role": "Developer"
    },
    {
      "name": "Contributors",
      "homepage": "https://github.com/deep-web-solutions/wordpress-plugins-utility/graphs/contributors"
    }
  ],

  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/deep-web-solutions/wordpress-framework-core"
    },
    {
      "type": "vcs",
      "url": "https://github.com/deep-web-solutions/wordpress-framework-bootstrapper"
    },
    {
      "type": "vcs",
      "url": "https://github.com/deep-web-solutions/wordpress-framework-helpers"
    },
    {
      "type": "vcs",
      "url": "https://github.com/deep-web-solutions/wordpress-framework-utilities"
    }
  ],
  "require": {
    "php-di/php-di": "~6.1.0",
    "composer/installers": "~1.0",
    "deep-web-solutions/wp-framework-core": "master@dev",
    "deep-web-solutions/wp-framework-bootstrapper": "master@dev",
    "deep-web-solutions/wp-framework-helpers": "master@dev",
    "deep-web-solutions/wp-framework-utilities": "master@dev"
  },
  "require-dev": {
    "wpreadme2markdown/wp2md": "~3.0",

    "phpmd/phpmd": "*",
    "squizlabs/php_codesniffer": "^3.5",
    "dealerdirect/phpcodesniffer-composer-installer": "*",
    "object-calisthenics/phpcs-calisthenics-rules": "*",
    "phpcompatibility/php-compatibility": "*",
    "phpcompatibility/phpcompatibility-wp": "*",
    "wp-coding-standards/wpcs": "*",
    "sllh/composer-versions-check": "*"
  },
  "autoload": {
    "psr-4": {
      "DeepWebSolutions\\Plugins\\Utility\\": "src/includes"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "": "tests/_support"
    }
  }
}